<main>
    <form class="default-form" action="/vacantes/editar/{{vacante.url}}" method="POST">
        <h3>Informacion General</h3>
        <div class="campo">
            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" placeholder="Ej. React Developer"  value={{vacante.titulo}} >
        </div>
        <div class="campo">
            <label for="empresa">Empresa</label>
            <input type="text" name="empresa" placeholder="Empresa Contrata" value={{vacante.empresa}} >
        </div>
        <div class="campo">
            <label for="ubicacion">ubicación</label>
            <input type="text" name="ubicacion" placeholder="Ej. Remoto/México" value={{vacante.ubicacion}} >
        </div>
        <div class="campo">
            <label for="salario">Salario (USD)</label>
            <input type="text" name="salario" placeholder="Ej. $500" value={{vacante.salario}} >
        </div>
        <div class="campo">
            <label for="contrato">Contrato</label>
            <select name="contrato" >
                {{#tipoContrato vacante.contrato}}
                    <option value="" selected disabled>--Selecciona--</option>
                    <option value="freelance">Freelance</option>
                    <option value="tiempo-completo">Tiempo Completo</option>
                    <option value="medio-tiempo">Medio Tiempo</option>
                    <option value="por-proyecto">Por Proyecto</option>
                {{/tipoContrato}}
            </select>
        </div>
        <h3>Descripcion del puesto</h3>
        <div class="campo descripcion">
            <label for="descripcion">Descripcion</label>
            <input type="hidden" id="x" name="descripcion" value="{{{vacante.descripcion}}}">
            <trix-editor input="x"></trix-editor>
        </div>
        <h3>Conocimientos</h3>
        <ul class="lista-conocimientos">
            {{#seleccionarSkills vacante.skills}}
            {{/seleccionarSkills}}
        </ul>
        <div class="campo centrar-horizontal">
            <input type="hidden" name="skills" id="skills">
            <input type="submit" value="Publicar" class="btn btn-azul">
        </div>
    </form>
</main>