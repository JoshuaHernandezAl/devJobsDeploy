<main class="lista-candidati">
    <h2>Lista de candidatos</h2>
    {{#if candidatos.length}}
        {{#each candidatos}}
            <div class="candidato">
                <div class="caja">
                    <p class="etiqueta">
                        <p class="nombre">{{nombre}}</p>
                    </p>
                </div>
                <div class="caja">
                    <p class="etiqueta">
                        <p class="nombre">{{email}}</p>
                    </p>
                </div>
                <div class="caja">
                    <p class="etiqueta">
                        <a href="/uploads/cv/{{cv}}" class="btn btn-verde">Ver CV</a>
                    </p>
                </div>

            </div>
        {{/each}}
    {{else}}
        <p>Aun no hay candidatos</p>
    {{/if }}
</main>